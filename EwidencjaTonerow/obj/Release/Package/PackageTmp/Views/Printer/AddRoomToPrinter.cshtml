@model EwidencjaTonerow.Models.AddRoomToPrinterViewModel
@{
    ViewBag.Title = "Powiąż drukarkę z pomieszczeniem";
}

<div class="row">
    <div class="col-md-12 col-lg-12" id="listOfItemsTitle"><h2>Powiąż drukarkę z pomieszczeniem</h2></div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-2 col-lg-2">
            <div class="form-group">
                @Html.LabelFor(model => model.Printer.Name, htmlAttributes: new { @class = "control-label col-md-12" })
            </div>
        </div>
        <div class="col-md-9 col-lg-9">
            @Html.DisplayFor(model => model.Printer.Name, new { htmlAttributes = new { @class = "form-control col-md-12", @readonly = "readonly" } })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 col-lg-2">
            <div class="form-group">
                @Html.Label("Pomieszczenia", htmlAttributes: new { @class = "control-label col-md-12" })
            </div>
        </div>
        <div class="col-md-8 col-lg-8">
            @Html.DropDownListFor(r => r.RoomID, new SelectList(Model.Rooms, "RoomID", "Name"),
           "--Wybierz pomieszczenie--", new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-lg8">
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br />
                <input type="submit" value="Utwórz" class="btn btn-default" />
            </div>
        </div>
    </div>

}