<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/jquery") 
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    <meta name="description" content="The description of my page" />
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Ewidencja tonerów", "Index", "Order", new { @class = "navbar-brand", id = "pageTitle" })
                </div>
                <div class="navbar-collapse collapse" id="navbar">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Zamówienia<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("W trakcie realizacji", "Index", "Order")</li>
                                <li>@Html.ActionLink("Zrealizowane", "Delivered", "Order")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Magazyn tonerów<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Tonery na stanie", "Index", "Storehouse")</li>
                                <li>@Html.ActionLink("Wymienione tonery", "Exchanged", "Storehouse")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Słowniki<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Drukarki", "Index", "Printer")</li>
                                <li>@Html.ActionLink("Pomieszczenia", "Index", "Room")</li>
                                <li>@Html.ActionLink("Tonery", "Index", "Toner")</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="jumbotron">
            @RenderBody()
        </div>
    </div>
    
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    <script>
        var dateToday = new Date();
        $(function () {
            $(".jqueryui-marker-datepicker")
                .datepicker({
                    changeYear: true,
                    showOn: "button",
                    maxDate: dateToday,
                })
                .next("button").button({
                    label: "Wybierz datę",
                    text: false
                }).addClass("btn btn-default pull-right").removeClass("ui-button")
        });
    </script>
</body>
</html>